{
    "name": "Salesforce Easy Navigator",
    "description": "âš¡ Navigate Salesforce Lightning faster than ever! Quick access to Setup, Developer Console, Object Manager, and your favorite pages. Boost productivity with smart bookmarks, dark mode, and one-click navigation to any Salesforce page.",
    "version": "3.1.0",
    "manifest_version": 3,
    "action": {
        "default_popup": "popup.html",
        "default_title": "Salesforce Easy Navigator - Quick Access to Your Most Used Pages",
        "default_icon": {
            "16": "/images/navigator16.png",
            "32": "/images/navigator32.png",
            "48": "/images/navigator48.png",
            "128": "/images/navigator128.png"
        }
    },
    "icons": {
        "16": "/images/navigator16.png",
        "32": "/images/navigator32.png",
        "48": "/images/navigator48.png",
        "128": "/images/navigator128.png"
    },
    "permissions": ["tabs", "storage", "notifications"],
    "host_permissions": ["*://*/lightning/*", "*://*.salesforce.com/*", "*://*.force.com/*"],
    "commands": {
        "_execute_action": {
            "suggested_key": {
                "default": "Alt+N",
                "mac": "Alt+N"
            },
            "description": "Open Salesforce Easy Navigator"
        },
        "navigate_to_setup": {
            "suggested_key": {
                "default": "Alt+S",
                "mac": "Alt+S"
            },
            "description": "Navigate to Salesforce Setup"
        },
        "navigate_to_home": {
            "suggested_key": {
                "default": "Alt+H",
                "mac": "Alt+H"
            },
            "description": "Navigate to Salesforce Home"
        }
    },
    "content_scripts": [
        {
            "matches": ["*://*/lightning/*"],
            "js": ["contentSetup.js"],
            "css": ["setupStyle.css"],
            "run_at": "document_end"
        }
    ],
    "background": {
        "service_worker": "background.js"
    },
    "web_accessible_resources": [
        {
            "resources": ["images/*"],
            "matches": ["*://*.salesforce.com/*", "*://*.force.com/*"]
        }
    ]
}
